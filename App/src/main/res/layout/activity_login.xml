<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity">


    <Toolbar
            android:titleTextColor="@color/common_white"
            android:navigationIcon="@mipmap/left"
            android:title="登录"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/common_white"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

    </Toolbar>


    <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:id="@+id/tl_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
                android:text="17090408824"
                android:id="@+id/etPhone"
                android:hint="手机号"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toBottomOf="@+id/tl_phone"
            android:id="@+id/tl_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
                android:text="123456"
                android:id="@+id/etPassword"
                android:hint="密码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tl_password"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/colorWhite"
                android:background="@drawable/common_btn_selector"
                android:text="@string/sing_in"
                android:id="@+id/btnSingIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/colorWhite"
                android:background="@drawable/common_btn_selector"
                android:text="@string/string_register"
                android:id="@+id/btnRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>