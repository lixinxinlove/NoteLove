<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/MatchMatch.Vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MyselfActivity">

    <androidx.appcompat.widget.Toolbar
            android:titleTextColor="@color/common_white"
            app:navigationIcon="@mipmap/left"
            app:titleTextColor="@color/common_white"
            app:title="我的"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="120dp">


        <ImageView
                android:scaleType="fitXY"
                android:padding="10dp"
                android:background="@color/common_red"
                android:src="@mipmap/kongzhuangtai"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"
                android:id="@+id/headView"
                android:layout_width="80dp"
                android:layout_height="80dp"/>


        <TextView
                android:id="@+id/mTvUserName"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


    </LinearLayout>


    <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/mBtnLogout"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorWhite"
            android:background="@drawable/common_btn_selector"
            android:text="退出登录"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>


</RelativeLayout>