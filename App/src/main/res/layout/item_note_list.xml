<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout style="@style/MatchWrap.Vertical">

        <TextView
                android:textColor="@color/common_black"
                android:textSize="@dimen/text_size"
                android:text="111111"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_info"
                android:layout_marginRight="@dimen/def_margin_right"
                android:layout_marginLeft="@dimen/def_margin_Left"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="@color/common_blue_dark"
                android:text="20:10"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_time"
                android:layout_marginRight="@dimen/def_margin_right"
                android:layout_marginLeft="@dimen/def_margin_Left"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <View
                android:layout_marginRight="@dimen/def_margin_right"
                android:layout_marginLeft="@dimen/def_margin_Left"
                android:layout_marginTop="10dp"
                android:background="@color/common_divider"
                android:layout_width="match_parent"
                android:layout_height="1px"/>


    </LinearLayout>

    <TextView
            android:id="@+id/tvDelete"
            android:text="删除"
            android:layout_width="80dp"
            android:gravity="center"
            android:background="@color/common_blue_dark"
            android:layout_height="match_parent"/>


</com.mcxtzhang.swipemenulib.SwipeMenuLayout>


